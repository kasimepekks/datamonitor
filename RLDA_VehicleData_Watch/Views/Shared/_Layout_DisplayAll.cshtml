<script>


          var element = document.getElementById('id');
        var span = document.getElementById('user');
        if ("@ViewBag.User"=="Admin") {
            element.src ="/Pictures/老板.png"
            span.textContent = "Admin";
        }
        else {
            element.src = "/Pictures/普通用户.png";
            span.textContent = "User";
    }

    layui.use(['element'], function () {
        var $ = layui.jquery;
        $.ajax({
            url: '@Url.Action("GetVehicleID", "Home")',
            dataType: 'json',
            type: 'post',
            success: function (data) {

                if (data.length > 0) {
                    console.log(data);
                    var vehicledl = document.getElementById("vehiclemonitor");

                    for (var i = 0; i < data.length; i++) {
                        var item = data[i];
                        var dd = document.createElement("dd");
                        vehicledl.appendChild(dd);
                        a = document.createElement('a');
                        a.href = "/" + item +"/DisPlayAll/";
                        a.innerText = item;
                        dd.appendChild(a);

                    }
                }



                //重新渲染 固定写法
            }
        });
    });

